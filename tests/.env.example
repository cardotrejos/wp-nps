# FlowPulse Test Environment Configuration
# Copy to .env and fill in values

# Environment
TEST_ENV=local
NODE_ENV=test

# URLs
BASE_URL=http://localhost:3001
API_URL=http://localhost:3000/api

# Test User Credentials (optional - factories create users dynamically)
TEST_USER_EMAIL=test@flowpulse.test
TEST_USER_PASSWORD=

# Feature Flags
FEATURE_FLAG_NEW_DASHBOARD=true

# Kapso (WhatsApp) - Use mock in tests
KAPSO_API_KEY=test-mock-key
KAPSO_USE_MOCK=true

# Stripe (Billing) - Use test mode
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_test_xxx

# Database (Test isolation)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/flowpulse_test
