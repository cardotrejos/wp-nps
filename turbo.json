{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["KAPSO_API_KEY", "KAPSO_WEBHOOK_SECRET", "KAPSO_BASE_URL"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:push": {
      "cache": false,
      "persistent": true,
      "env": ["DATABASE_URL"]
    },
    "db:studio": {
      "cache": false,
      "persistent": true,
      "env": ["DATABASE_URL"]
    },
    "db:migrate": {
      "cache": false,
      "persistent": true,
      "env": ["DATABASE_URL"]
    },
    "db:generate": {
      "cache": false,
      "persistent": true,
      "env": ["DATABASE_URL"]
    },

    "db:start": {
      "cache": false,
      "persistent": true
    },
    "db:stop": {
      "cache": false,
      "persistent": true
    },
    "db:watch": {
      "cache": false,
      "persistent": true
    },
    "db:down": {
      "cache": false,
      "persistent": true
    }
  }
}
