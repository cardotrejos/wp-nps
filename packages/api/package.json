{
  "name": "@wp-nps/api",
  "type": "module",
  "exports": {
    ".": {
      "default": "./src/index.ts"
    },
    "./*": {
      "default": "./src/*.ts"
    },
    "./lib/*": {
      "default": "./src/lib/*.ts"
    },
    "./services/*": {
      "default": "./src/services/*.ts"
    },
    "./utils/*": {
      "default": "./src/utils/*.ts"
    },
    "./middleware/*": {
      "default": "./src/middleware/*.ts"
    },
    "./emails/*": {
      "default": "./src/emails/*.tsx"
    }
  },
  "scripts": {},
  "dependencies": {
    "@orpc/client": "catalog:",
    "@orpc/openapi": "catalog:",
    "@orpc/server": "catalog:",
    "@orpc/zod": "catalog:",
    "@react-email/components": "^1.0.3",
    "@types/react": "^19.2.7",
    "@wp-nps/auth": "workspace:*",
    "@wp-nps/db": "workspace:*",
    "@wp-nps/env": "workspace:*",
    "@wp-nps/kapso": "workspace:*",
    "dotenv": "catalog:",
    "elysia": "catalog:",
    "react": "^19.2.3",
    "resend": "^6.6.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@wp-nps/config": "workspace:*",
    "typescript": "^5"
  }
}
