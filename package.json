{
  "name": "wp-nps",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "@types/bun": "^1.3.4",
      "elysia": "^1.3.21",
      "@orpc/server": "^1.12.2",
      "@orpc/openapi": "^1.12.2",
      "@orpc/zod": "^1.12.2",
      "better-auth": "^1.4.9",
      "@orpc/client": "^1.12.2"
    }
  },
  "type": "module",
  "scripts": {
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "bun run scripts/run-vitest.ts run --coverage",
    "test:db:start": "docker compose -f docker/docker-compose.test.yml up -d",
    "test:db:stop": "docker compose -f docker/docker-compose.test.yml stop",
    "test:db:down": "docker compose -f docker/docker-compose.test.yml down -v",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "check": "oxlint && oxfmt --write",
    "ruler:apply": "bunx @intellectronica/ruler@latest apply --local-only",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @wp-nps/db db:push",
    "db:studio": "turbo -F @wp-nps/db db:studio",
    "db:generate": "turbo -F @wp-nps/db db:generate",
    "db:migrate": "turbo -F @wp-nps/db db:migrate",
    "db:start": "turbo -F @wp-nps/db db:start",
    "db:watch": "turbo -F @wp-nps/db db:watch",
    "db:stop": "turbo -F @wp-nps/db db:stop",
    "db:down": "turbo -F @wp-nps/db db:down"
  },
  "dependencies": {
    "@wp-nps/db": "workspace:*",
    "@wp-nps/env": "workspace:*",
    "@wp-nps/kapso": "workspace:*",
    "dotenv": "catalog:",
    "drizzle-orm": "^0.45.1",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/bun": "catalog:",
    "@vitest/coverage-v8": "^4.0.16",
    "@wp-nps/api": "workspace:*",
    "@wp-nps/config": "workspace:*",
    "bcryptjs": "^3.0.3",
    "elysia": "catalog:",
    "msw": "^2.12.6",
    "oxfmt": "^0.19.0",
    "oxlint": "^1.34.0",
    "turbo": "^2.6.3",
    "typescript": "^5",
    "vitest": "^4.0.16"
  },
  "packageManager": "bun@1.3.5"
}
