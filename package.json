{
  "name": "wp-nps",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "@types/bun": "^1.3.4",
      "elysia": "^1.3.21",
      "@orpc/server": "^1.12.2",
      "@orpc/openapi": "^1.12.2",
      "@orpc/zod": "^1.12.2",
      "better-auth": "^1.4.9",
      "react": "^19.2.3",
      "react-dom": "^19.2.3",
      "@orpc/client": "^1.12.2",
      "@types/react": "^19.2.7",
      "@types/react-dom": "^19.2.3"
    }
  },
  "type": "module",
  "scripts": {
    "check": "oxlint && oxfmt --write",
    "ruler:apply": "bunx @intellectronica/ruler@latest apply --local-only",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @wp-nps/db db:push",
    "db:studio": "turbo -F @wp-nps/db db:studio",
    "db:generate": "turbo -F @wp-nps/db db:generate",
    "db:migrate": "turbo -F @wp-nps/db db:migrate",
    "db:start": "turbo -F @wp-nps/db db:start",
    "db:watch": "turbo -F @wp-nps/db db:watch",
    "db:stop": "turbo -F @wp-nps/db db:stop",
    "db:down": "turbo -F @wp-nps/db db:down"
  },
  "dependencies": {
    "dotenv": "catalog:",
    "zod": "catalog:",
    "@wp-nps/env": "workspace:*"
  },
  "devDependencies": {
    "turbo": "^2.6.3",
    "oxlint": "^1.34.0",
    "oxfmt": "^0.19.0",
    "typescript": "^5",
    "@types/bun": "catalog:",
    "@wp-nps/config": "workspace:*"
  },
  "packageManager": "bun@1.3.5"
}
